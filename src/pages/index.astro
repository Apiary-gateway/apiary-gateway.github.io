---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout>
  <Hero />

  <main class="container">
    <section class="about-section">
      <h2>About Willow CDC</h2>
      <p>
        Willow Community Development Corporation is dedicated to improving the quality of life in our neighborhoods through sustainable development, community engagement, and economic empowerment.
      </p>
    </section>

    <section class="projects-section">
      <h3>Our Projects</h3>
      <div class="project-grid">
        <div class="project-card">
          <h4>Affordable Housing</h4>
          <p>Creating sustainable and affordable housing solutions for our community members.</p>
        </div>
        <div class="project-card">
          <h4>Youth Programs</h4>
          <p>Empowering the next generation through education and mentorship programs.</p>
        </div>
        <div class="project-card">
          <h4>Community Events</h4>
          <p>Bringing the community together through cultural and educational events.</p>
        </div>
      </div>
    </section>

    <section class="contact-section">
      <h3>Get Involved</h3>
      <p>Join us in making a difference in our community. Contact us to learn more about our programs and how you can contribute.</p>
      <a href="/contact" class="cta-button">Contact Us</a>
    </section>
  </main>
</BaseLayout>
