---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Team from '../components/Team.astro';

const sections = [
  {
    title: "Our Mission",
    description: "We are dedicated to creating sustainable solutions that benefit both our community and the environment. Our innovative approach combines traditional wisdom with modern technology.",
    image: "/mission.jpg"
  },
  {
    title: "Our Impact",
    description: "Through our initiatives, we've helped transform communities and create lasting change. Our work has touched thousands of lives and continues to grow.",
    image: "/impact.jpg"
  },
  {
    title: "Our Vision",
    description: "We envision a future where sustainable practices are the norm, and communities thrive in harmony with nature. Join us in making this vision a reality.",
    image: "/vision.jpg"
  }
];

const heroText = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit.';
const heroSubtext = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.';
---

<BaseLayout>
  <Hero 
    heroText={heroText} 
    heroSubtext={heroSubtext}
  />

  <div class="alternating-sections">
    {sections.map((section, index) => (
      <section class={`section ${index % 2 === 0 ? 'left' : 'right'}`}>
        <div class="section-content">
          <div class="text-content">
            <h2>{section.title}</h2>
            <p>{section.description}</p>
          </div>
          <div class="image-content">
            <img src={section.image} alt={section.title} />
          </div>
        </div>
      </section>
    ))}
  </div>

  <section id="team">
    <Team />
  </section>
</BaseLayout>

<style>
  .alternating-sections {
    padding: 4rem 0;
  }

  .section {
    padding: 4rem 0;
  }

  .section-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .section.left .section-content {
    grid-template-areas: "text image";
  }

  .section.right .section-content {
    grid-template-areas: "image text";
  }

  .text-content {
    grid-area: text;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .image-content {
    grid-area: image;
    position: relative;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .text-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .text-content p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #333;
  }

  .image-content img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .image-content:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .section-content {
      grid-template-columns: 1fr;
      grid-template-areas: "image" "text" !important;
      gap: 2rem;
    }

    .text-content h2 {
      font-size: 2rem;
    }
  }
</style>
