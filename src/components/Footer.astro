---
// src/components/Footer.astro
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-section">
      <h4>Willow CDC</h4>
      <p>Building stronger communities through sustainable development and engagement.</p>
    </div>

    <div class="footer-section">
      <h4>Quick Links</h4>
      <ul>
        <li><a href="/about">About Us</a></li>
        <li><a href="/projects">Our Projects</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/donate">Donate</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4>Contact Us</h4>
      <ul>
        <li>123 Community Street</li>
        <li>City, State 12345</li>
        <li>Phone: (123) 456-7890</li>
        <li>Email: info@willowcdc.org</li>
      </ul>
    </div>

    <div class="footer-section">
      <h4>Follow Us</h4>
      <div class="social-links">
        <a href="#" aria-label="Facebook"><img src="/facebook.svg" alt="Facebook" /></a>
        <a href="#" aria-label="Twitter"><img src="/twitter.svg" alt="Twitter" /></a>
        <a href="#" aria-label="Instagram"><img src="/instagram.svg" alt="Instagram" /></a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; 2024 Willow CDC. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background-color: #333;
    color: white;
    padding: 4rem 0 2rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h4 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: white;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--primary-color);
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links img {
    width: 24px;
    height: 24px;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 0 1rem;
    }

    .footer-container {
      grid-template-columns: 1fr;
    }
  }
</style>
