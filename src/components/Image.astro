---
interface Props {
  src: string;
  alt: string;
  height?: string;
  caption?: string;
}

const { src, alt, height = 'auto', caption } = Astro.props;
---

<figure class="my-8">
  <img
    src={src}
    alt={alt}
    class="w-full mx-auto rounded-lg shadow-md"
    style={`height: ${height};`}
    loading="lazy"
  />
  {caption && (
    <figcaption class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
      {caption}
    </figcaption>
  )}
</figure> 