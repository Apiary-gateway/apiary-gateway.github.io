---
// src/layouts/BaseLayout.astro
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>APIARY</title>
    <link rel="icon" href="/images/apiary_favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gotham:wght@700&display=swap" rel="stylesheet">
    <script>
      // Set theme before any content renders
      (function() {
        const savedTheme = localStorage.getItem('theme');
        const theme = savedTheme || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
        if (!savedTheme) {
          localStorage.setItem('theme', 'dark');
        }
      })();
    </script>
    <style>
      /* Prevent flash of wrong theme */
      :root {
        color-scheme: dark;
      }
      body {
        background-color: var(--color-background);
        color: var(--color-text);
      }
    </style>
  </head>
  <body>
    <Navbar />
    <main class="main-content">
      <slot />
    </main>
  </body>
</html>

<style>
  .main-content {
    padding-top: 6rem; /* Account for fixed navbar height */
    min-height: calc(100vh - 6rem); /* Viewport height minus navbar only */
  }

  @media (max-width: 768px) {
    .main-content {
      padding-top: 4.5rem; /* Reduced padding for mobile */
      min-height: calc(100vh - 4.5rem);
    }
  }
</style>
